<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/applied_jobs_border"
        android:minWidth="195dp"
        android:minHeight="85dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/company_image_apply"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:paddingLeft="4dp"
                android:paddingTop="6dp"
                android:src="@drawable/jobs_two">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/job_name_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text=""
                    android:textColor="#30475E">

                </TextView>

                <TextView
                    android:id="@+id/company_name_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:paddingTop="1dp"
                    android:text=""
                    android:textColor="@color/app_grey"
                    android:textSize="11sp"></TextView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Status :"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="11sp">
            </TextView>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:layout_marginStart="6dp"
                android:textColor="@color/black"
                android:textSize="11sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Applied Date :"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="11sp">
            </TextView>

            <TextView
                android:id="@+id/applied_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:textColor="@color/black"
                android:textSize="11sp"></TextView>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>