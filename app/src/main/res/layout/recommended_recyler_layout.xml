<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/recomm_jo_border"
        android:minWidth="195dp"
        android:minHeight="85dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/company_image"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:paddingLeft="2dp"
                android:layout_marginStart="-5dp"
                android:src="@drawable/jobs_two">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/job_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="6dp"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text=""
                    android:textColor="#30475E">

                </TextView>

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:paddingTop="1dp"
                    android:text=""
                    android:textColor="@color/app_grey"
                    android:textSize="11sp"></TextView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:layout_marginStart="3dp"
                android:src="@drawable/location_ico"></ImageView>

            <TextView
                android:id="@+id/location"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seoge_bold_two"
                android:text=""
                android:maxLines="2"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="8sp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:src="@drawable/suitcase"></ImageView>

            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Experience"
                android:textColor="@color/black"
                android:textSize="9sp"></TextView>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>