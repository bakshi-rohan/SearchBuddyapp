<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Forms.Form_Two">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.AddProfessionalDetail">
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent" />
        <TextView
            android:id="@+id/tt_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seogee_ui"
            android:text="Add Work Experience"
            android:layout_marginTop="18dp"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/choclate"
            android:textSize="19sp">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_company_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:hint="Company Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tt_work"
            app:boxStrokeColor="#936030"
            app:hintTextColor="#8A414141">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_comp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#414141" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_designation"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:hint="Designation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_company_name"
            app:boxStrokeColor="#936030"
            app:hintTextColor="#8A414141">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#414141" />

        </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_total_exp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:hint="Total experience(in years)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_designation"
        app:boxStrokeColor="#936030"
        app:hintTextColor="#8A414141">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_total_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:textColor="#414141" />

    </com.google.android.material.textfield.TextInputLayout>
    <RelativeLayout
        android:id="@+id/industry_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_total_exp"
        android:background="@drawable/rounded_bckg">
        <Spinner
            android:id="@+id/ti_function_form"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Location"
            android:minHeight="45dp"
            app:boxStrokeColor="#936030"
            app:hintTextColor="#8A414141"
            >
        </Spinner>
    </RelativeLayout>
        <AutoCompleteTextView
            android:id="@+id/ti_location_form"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_bckg"
            android:hint=" Location (Type City ...)"
            android:minHeight="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/industry_rl"
            app:boxStrokeColor="#936030"
            app:hintTextColor="#8A414141"></AutoCompleteTextView>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_location_form"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/seogee_ui"
            android:text="Is this your present company?"
            android:textColor="@color/app_grey"
            android:textSize="13sp"></TextView>

        <RadioGroup
            android:id="@+id/radio_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_yes_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/choclate"
                android:fontFamily="@font/seogee_ui"
                android:text="Yes."
                android:textColor="@color/app_grey"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radio_no_work"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:buttonTint="@color/choclate"
                android:fontFamily="@font/seogee_ui"
                android:text="No"
                android:textColor="@color/app_grey"
                android:textSize="16dp" />
        </RadioGroup>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice_rl"
        android:background="@drawable/rounded_bckg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_enddate_work"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="19dp">
        <Spinner
            android:id="@+id/ti_notice"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Location"
            android:minHeight="45dp"
            app:boxStrokeColor="#936030"
            app:hintTextColor="#8A414141">
        </Spinner>
    </RelativeLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/start_from"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:hint="Start From"
            app:boxStrokeColor="#936030"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll"
            app:startIconDrawable="@drawable/baseline_calendar_month_24"
            app:hintTextColor="#8A414141">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_date_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="#414141" />

        </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_enddate_work"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:hint="End Date"
        android:inputType="date"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_from"
        app:boxStrokeColor="#936030"
        app:startIconDrawable="@drawable/baseline_calendar_month_24"
        app:hintTextColor="#8A414141">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_enddate_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="#414141" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/login_btn_border"
        android:fontFamily="@font/seogee_ui"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="#936030"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notice_rl">
    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginHorizontal="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/login_btn_border"
        android:fontFamily="@font/seogee_ui"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/choclate"
        android:textSize="18dp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save">
    </com.google.android.material.button.MaterialButton>





</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>