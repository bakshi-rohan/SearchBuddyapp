<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bg"
    tools:context=".Forms.Form_Two">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.AddProfessionalDetail">
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent" />
        <TextView
            android:id="@+id/tt_work"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/seogee_ui"
            android:text="Add Work Experience"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/choclate"
            android:textSize="19sp">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_company_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:hint="Company Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tt_work"
            app:boxStrokeColor="#936030"
            app:hintTextColor="#8A414141">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_comp_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#414141" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_designation"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:hint="Designation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_company_name"
            app:boxStrokeColor="#936030"
            app:hintTextColor="#8A414141">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_designation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#414141" />

        </com.google.android.material.textfield.TextInputLayout>


        <AutoCompleteTextView
            android:id="@+id/ti_location_form"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="27dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/rounded_bckg"
            android:hint=" Location (Start typing...)"
            android:minHeight="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_designation"
            app:boxStrokeColor="#936030"
            app:hintTextColor="#8A414141"></AutoCompleteTextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/start_from"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:hint="Start From"
            app:boxStrokeColor="#936030"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_location_form"
            app:startIconDrawable="@drawable/baseline_calendar_month_24"
            app:hintTextColor="#8A414141">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_date_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textColor="#414141" />

        </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_enddate_work"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp"
        android:hint="End Date"
        android:inputType="date"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_from"
        app:boxStrokeColor="#936030"
        app:startIconDrawable="@drawable/baseline_calendar_month_24"
        app:hintTextColor="#8A414141">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_enddate_work"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textColor="#414141" />

    </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ti_enddate_work"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/seogee_ui"
                android:text="Working till present"
                android:textColor="@color/app_grey"
                android:textSize="16sp"></TextView>

            <RadioGroup
                android:id="@+id/radio_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_yes_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/choclate"
                    android:fontFamily="@font/seogee_ui"
                    android:text="Yes."
                    android:textColor="@color/app_grey"
                    android:textSize="15dp" />

                <RadioButton
                    android:id="@+id/radio_no_work"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:buttonTint="@color/choclate"
                    android:fontFamily="@font/seogee_ui"
                    android:text="No"
                    android:textColor="@color/app_grey"
                    android:textSize="16dp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/choclate"
            android:minHeight="48dp"
            android:layout_marginTop="350dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/save_cancel_border"
                android:fontFamily="@font/seoge_bold_two"
                android:gravity="center"
                android:minWidth="82dp"
                android:minHeight="27dp"
                android:text="Cancel"
                android:textColor="@color/choclate"></TextView>

            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="162dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/save_cancel_border"
                android:fontFamily="@font/seoge_bold_two"
                android:gravity="center"
                android:minWidth="82dp"
                android:minHeight="27dp"
                android:text="Save"
                android:textColor="@color/choclate"></TextView>
        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>