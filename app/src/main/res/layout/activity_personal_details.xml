<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    tools:context=".Forms.Form_Two">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.PersonalDetails">
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Basic Details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Basic Details"
        android:fontFamily="@font/seoge_bold_two"
        android:textColor="@color/choclate"
        android:textSize="17sp">
    </TextView>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Add some basic details about yourself to help recruiters know you"
        android:textColor="@color/app_grey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        tools:text='Add some basic details about yourself to help recruiters know you' />
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/seogee_ui"
            android:text="Gender *"
            android:textColor="@color/app_grey"
            android:textSize="16sp"></TextView>

        <RadioGroup
            android:id="@+id/gender_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_mr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/choclate"
                android:fontFamily="@font/seogee_ui"
                android:text="Male"
                android:textColor="@color/app_grey"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radio_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:buttonTint="@color/choclate"
                android:fontFamily="@font/seogee_ui"
                android:text="Female"
                android:textColor="@color/app_grey"
                android:textSize="16dp" />

            <RadioButton
                android:id="@+id/radio_others"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:buttonTint="@color/choclate"
                android:fontFamily="@font/seogee_ui"
                android:text="Others"
                android:textColor="@color/app_grey"
                android:textSize="16dp" />
        </RadioGroup>
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:hint="Name *"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:boxStrokeColor="@color/choclate"
        app:hintTextColor="#8A414141"
        app:startIconDrawable="@drawable/location_icon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#414141" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="14dp"
        android:hint="Mobile Number *"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_name"
        app:boxStrokeColor="@color/choclate"
        app:hintTextColor="#8A414141"
        app:startIconDrawable="@drawable/mobile_phone">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLength="10"
            android:textColor="#414141" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_date"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:hint="D.O.B *"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_number"
        app:boxStrokeColor="@color/choclate"
        app:hintTextColor="#8A414141"
        app:startIconDrawable="@drawable/baseline_calendar_month_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:textColor="#414141" />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_date"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:fontFamily="@font/seogee_ui"
            android:text="Differently Able *"
            android:textColor="@color/app_grey"
            android:textSize="16sp"></TextView>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/choclate"
                android:fontFamily="@font/seogee_ui"
                android:text="Yes."
                android:textColor="@color/app_grey"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/radio_no"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2dp"
                android:buttonTint="@color/choclate"
                android:fontFamily="@font/seogee_ui"
                android:text="No"
                android:textColor="@color/app_grey"
                android:textSize="16dp" />
        </RadioGroup>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:hint="Email *"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:boxStrokeColor="@color/choclate"
        app:hintTextColor="#8A414141">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#414141" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_desg"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="14dp"
        android:hint="Designation *"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_email"
        app:boxStrokeColor="@color/choclate"
        app:hintTextColor="#8A414141">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_desg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="#414141" />

    </com.google.android.material.textfield.TextInputLayout>
    <AutoCompleteTextView
        android:id="@+id/ti_location_form"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bckg"
        android:minHeight="52dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="27dp"
        android:layout_marginHorizontal="16dp"
        android:paddingLeft="11.4dp"
        android:hint=" Location (Start Typing...)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ti_desg"
        app:boxStrokeColor="#936030"
        app:hintTextColor="#8A414141">
    </AutoCompleteTextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="158dp"
        android:background="@color/choclate"
        android:minHeight="48dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/save_cancel_border"
            android:fontFamily="@font/seoge_bold_two"
            android:gravity="center"
            android:minWidth="82dp"
            android:minHeight="27dp"
            android:text="Cancel"
            android:textColor="@color/choclate"></TextView>

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="162dp"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/save_cancel_border"
            android:fontFamily="@font/seoge_bold_two"
            android:gravity="center"
            android:minWidth="82dp"
            android:minHeight="27dp"
            android:text="Save"
            android:textColor="@color/choclate"></TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>