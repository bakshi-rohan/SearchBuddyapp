<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    tools:context=".Forms.Form_three">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_bar_hom"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_bar_home"
                    android:layoutDirection="rtl"
                    android:elevation="6dp"
                    android:layout_marginHorizontal="7dp"
                    app:defaultQueryHint="Job title or company"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@null"
                    app:searchIcon="@drawable/magnifine"></androidx.appcompat.widget.SearchView>

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_bar_location"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="15.6dp"
                    android:background="@drawable/search_bar_home"
                    android:layoutDirection="rtl"
                    android:visibility="gone"
                    app:defaultQueryHint="location"
                    app:iconifiedByDefault="false"
                    android:gravity="right"
                    app:queryBackground="@null"></androidx.appcompat.widget.SearchView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="7dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ronded">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp">


                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/dp"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                        android:src="@drawable/placeholder"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                    <ProgressBar
                        android:id="@+id/progress_bar"
                        style="@style/CircularDeterminateProgressBar"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:indeterminateOnly="false"
                        android:progress="0"
                        android:progressDrawable="@drawable/circle"
                        android:rotation="110"
                        android:visibility="visible"
                        tools:progress="0" />
                </RelativeLayout>

                    <TextView
                        android:id="@+id/username_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/seoge_bold_two"
                        android:text=""
                        android:layout_marginTop="35dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"></TextView>

                    <TextView
                        android:id="@+id/update_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ronded"
                        android:fontFamily="@font/seogee_ui"
                        android:gravity="center"
                        android:layout_marginTop="35dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="35dp"
                        android:text="Update Profile"
                        android:textColor="@color/black">
                    </TextView>


                </LinearLayout>
                <TextView
                    android:id="@+id/profile_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:layout_marginTop="-9dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="13dp"
                    android:fontFamily="@font/seoge_bold_two"
                    android:layout_marginBottom="14dp">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_wexp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:minWidth="152dp"
                        android:background="@drawable/home_ui_text"
                        android:fontFamily="@font/seogee_ui"
                        android:gravity="center"
                        android:text="Add work experience"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:id="@+id/home_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="172dp"
                        android:minHeight="22dp"
                        android:background="@drawable/home_ui_text"
                        android:fontFamily="@font/seogee_ui"
                        android:gravity="center"
                        android:text="Add educational details"
                        android:layout_marginHorizontal="10dp"
                        android:textColor="@color/black"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/home_add_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginBottom="4dp"
                        android:minWidth="152dp"
                        android:background="@drawable/home_ui_text"
                        android:fontFamily="@font/seogee_ui"
                        android:gravity="center"
                        android:text="Add CV"
                        android:textColor="@color/black"></TextView>
                    <TextView
                        android:id="@+id/home_add_video_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="172dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="9dp"
                        android:background="@drawable/home_ui_text"
                        android:fontFamily="@font/seogee_ui"
                        android:gravity="center"
                        android:text="Add video CV"
                        android:textColor="@color/black"></TextView>
                </LinearLayout>
<LinearLayout
    android:id="@+id/warn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="11dp"
    android:minHeight="26dp"
    android:layout_marginBottom="6dp"
    android:background="@drawable/home_ui_warning"
    android:layout_marginTop="8dp">
    <ImageView
        android:id="@+id/warn_img"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/warning"></ImageView>

    <TextView
        android:id="@+id/warn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="157dp"
        android:layout_marginTop="2.7dp"
        android:fontFamily="@font/seogee_ui"
        android:layout_marginStart="4dp"
        android:text="Get 3X recruiter views by completing your profile "
        android:textColor="#ff0000"></TextView>
</LinearLayout>
            </LinearLayout>

<!--            -->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="14dp"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text="Recommended Jobs"
                    android:textColor="#936030"
                    android:textSize="15sp"></TextView>

                <TextView
                    android:id="@+id/based"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="22dp"
                    android:layout_marginTop="1dp"
                    android:fontFamily="@font/seogee_ui"
                    android:text="Based on your preferences"
                    android:textColor="@color/app_grey"
                    android:textSize="12sp"></TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/viewalljobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text="View All"
                    android:visibility="gone"
                    android:layout_marginEnd="20dp"
                    android:textColor="#936030"
                    android:textSize="10sp"></TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recomm_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Explore By Job Categories"
                android:textColor="#936030"
                android:textSize="15sp"></TextView>


            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_recommended"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <include
                    layout="@layout/recommended_recyler_shimmer"/>

                <include
                    layout="@layout/recommended_recyler_shimmer"/>

                <include
                    layout="@layout/recommended_recyler_shimmer"/>

                <!--                    <include-->
                <!--                        layout="@layout/place_holder_layout"/>-->

                <!--                    <include-->
                <!--                        layout="@layout/place_holder_layout"/>-->

                <!--                    <include-->
                <!--                        layout="@layout/place_holder_layout"/>-->

            </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <TextView
                android:id="@+id/txtNoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/seogee_ui"
                android:text="No Positions found"
                android:textColor="@color/app_grey"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/based" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Top Companies"
                android:textColor="#936030"
                android:textSize="15sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/seogee_ui"
                android:text="Trending"
                android:textColor="@color/app_grey"
                android:textSize="12sp"></TextView>
            <LinearLayout
                android:id="@+id/hl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/comp_three"
                    android:layout_marginHorizontal="2dp"></ImageView>
                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/mednet"
                    android:layout_marginHorizontal="8dp"></ImageView>
                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@drawable/fleetx"
                    android:layout_marginHorizontal="8dp"></ImageView>
                <ImageView
                    android:layout_width="72dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/sab_paisa"
                    android:layout_marginHorizontal="8dp"></ImageView>

            </LinearLayout>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <include
                        layout="@layout/top_companies_recyler_layout"/>

                    <include
                        layout="@layout/top_companies_recyler_layout"/>

                    <include
                        layout="@layout/top_companies_recyler_layout"/>

                </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_companies_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Applied Jobs"
                android:visibility="gone"
                android:textColor="#936030"
                android:textSize="15sp"></TextView>
            <TextView
                android:id="@+id/txtNData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/seogee_ui"
                android:text="No Positions found"
                android:textColor="@color/app_grey"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/based" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/applied_recyler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/recruiter_jobs_border">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"
                    android:background="#ffffff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/border"
                            android:minWidth="165dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/im_profile_pic"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@android:color/transparent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/placeholder"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                                    <TextView
                                        android:id="@+id/profile_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="4dp"
                                        android:fontFamily="@font/seoge_bold_two"
                                        android:text="User Profile"
                                        android:layout_marginTop="1dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textColor="#936030"></TextView>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/border"
                            android:minWidth="165dp"
                            android:minHeight="64dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:id="@+id/applied_jobs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="2dp"
                                        android:layout_marginTop="9dp"
                                        android:fontFamily="@font/seoge_bold_two"
                                        android:text="Applied Jobs"
                                        android:textColor="#936030"></TextView>


                                    <TextView
                                        android:id="@+id/view_all"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:fontFamily="@font/seogee_ui"
                                        android:text="View All"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/app_blue"
                                        android:textSize="12sp"></TextView>
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rec_action_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/border"
                            android:minWidth="165dp"
                            android:minHeight="65dp"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="6dp"
                                        android:fontFamily="@font/seoge_bold_two"
                                        android:text="Recruiters Action"
                                        android:textColor="#936030"></TextView>

                                    <TextView
                                        android:id="@+id/days_rec"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6.5dp"
                                        android:text="2 days ago"
                                        android:textColor="@color/app_grey"
                                        android:textSize="12sp"></TextView>

                                    <TextView
                                        android:id="@+id/view_all_rec"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6.5dp"
                                        android:fontFamily="@font/seogee_ui"
                                        android:text="View All"
                                        android:textColor="@color/app_blue"
                                        android:textSize="12sp"></TextView>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
<!--Carousel View-->
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
