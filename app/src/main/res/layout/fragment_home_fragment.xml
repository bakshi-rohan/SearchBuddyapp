<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_bar_hom"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/search_bar"
                    android:layoutDirection="rtl"
                    android:elevation="6dp"
                    android:layout_marginHorizontal="7dp"
                    app:defaultQueryHint="Job title,keywords or company"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@null"
                    app:searchIcon="@drawable/magnifine"></androidx.appcompat.widget.SearchView>

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search_bar_location"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginHorizontal="35dp"
                    android:layout_marginTop="15.6dp"
                    android:background="@drawable/search_bar"
                    android:layoutDirection="rtl"
                    android:visibility="gone"
                    app:defaultQueryHint="location"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@null"
                    app:searchIcon="@drawable/location_icon"></androidx.appcompat.widget.SearchView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Explore Job Categories"
                android:textColor="#936030"
                android:textSize="15sp"></TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/viewalljobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text="View All"
                    android:layout_marginEnd="20dp"
                    android:textColor="#936030"
                    android:textSize="10sp"></TextView>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="5dp"></androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Recommended Jobs"
                android:textColor="#936030"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/based"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/seogee_ui"
                android:text="Based on your preferences"
                android:textColor="@color/app_grey"
                android:textSize="12sp"></TextView>
            <TextView
                android:id="@+id/txtNoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/seogee_ui"
                android:text="No Positions found"
                android:textColor="@color/app_grey"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/based" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recomm_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Top Companies"
                android:textColor="#936030"
                android:textSize="15sp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/seogee_ui"
                android:text="Trending"
                android:textColor="@color/app_grey"
                android:textSize="12sp"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/top_companies_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="22dp"
                android:layout_marginTop="14dp"
                android:fontFamily="@font/seoge_bold_two"
                android:text="Applied Jobs"
                android:textColor="#936030"
                android:textSize="15sp"></TextView>
            <TextView
                android:id="@+id/txtNData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/seogee_ui"
                android:text="No Positions found"
                android:textColor="@color/app_grey"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/based" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/applied_recyler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@drawable/recruiter_jobs_border">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:layout_marginBottom="5dp"
                    android:visibility="gone"
                    android:background="#ffffff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="11dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/border"
                            android:minWidth="165dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/im_profile_pic"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="9dp"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@android:color/transparent"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/placeholder"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />

                                    <TextView
                                        android:id="@+id/profile_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="4dp"
                                        android:fontFamily="@font/seoge_bold_two"
                                        android:text="User Profile"
                                        android:layout_marginTop="1dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textColor="#936030"></TextView>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/border"
                            android:minWidth="165dp"
                            android:minHeight="64dp"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:id="@+id/applied_jobs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="2dp"
                                        android:layout_marginTop="9dp"
                                        android:fontFamily="@font/seoge_bold_two"
                                        android:text="Applied Jobs"
                                        android:textColor="#936030"></TextView>


                                    <TextView
                                        android:id="@+id/view_all"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="4dp"
                                        android:fontFamily="@font/seogee_ui"
                                        android:text="View All"
                                        android:layout_marginTop="2dp"
                                        android:textColor="@color/app_blue"
                                        android:textSize="12sp"></TextView>
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/rec_action_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/border"
                            android:minWidth="165dp"
                            android:minHeight="65dp"
                            android:visibility="gone"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="6dp"
                                        android:fontFamily="@font/seoge_bold_two"
                                        android:text="Recruiters Action"
                                        android:textColor="#936030"></TextView>

                                    <TextView
                                        android:id="@+id/days_rec"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6.5dp"
                                        android:text="2 days ago"
                                        android:textColor="@color/app_grey"
                                        android:textSize="12sp"></TextView>

                                    <TextView
                                        android:id="@+id/view_all_rec"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="6.5dp"
                                        android:fontFamily="@font/seogee_ui"
                                        android:text="View All"
                                        android:textColor="@color/app_blue"
                                        android:textSize="12sp"></TextView>
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="31dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"
                android:background="@drawable/yellow_border"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/shield"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="9dp"
                        android:fontFamily="@font/seoge_bold_two"
                        android:text="Beware of fake details"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/seogee_ui"
                        android:text="Make sure not to present fake details"
                        android:textColor="@color/app_grey"
                        android:textSize="14sp"></TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
