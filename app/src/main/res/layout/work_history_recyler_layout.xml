<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebede0"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/location_ico"></ImageView>

            <TextView
                android:id="@+id/location_work_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text="Delhi"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />-->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/calender"></ImageView>

            <TextView
                android:id="@+id/started_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text="02-12-2023(Started From)"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="11sp">

            </TextView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/suitcase"></ImageView>

            <TextView
                android:id="@+id/function_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text="Inside Sales"
                android:layout_marginStart="5dp"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />-->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/notice_cal"></ImageView>

            <TextView
                android:id="@+id/notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text="15 days(Notice Period)"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="11sp">

            </TextView>
        </LinearLayout>
</LinearLayout>
    </LinearLayout>
</RelativeLayout>