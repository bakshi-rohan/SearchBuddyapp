<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/rectangle_border"
    android:layout_marginTop="6dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/ll_rec"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/designation_work_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="6dp"
        android:text="Android Developer"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/seoge_bold_two" />
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:layout_marginStart="105dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"
        app:srcCompat="@android:drawable/ic_menu_edit" />


</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_rec"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/company_name_work_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:text="TechWise"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:fontFamily="@font/seoge_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_rec" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/delete"
            android:layout_width="24dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:layout_marginStart="165dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/del" />


    </LinearLayout>
    <TextView
        android:id="@+id/location_work_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/black"
        android:text="Haridwar-Uttrakhand"
        android:fontFamily="@font/seoge_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_re" />


</androidx.constraintlayout.widget.ConstraintLayout>