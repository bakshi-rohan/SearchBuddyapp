<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/field_job_shadow"
        android:minWidth="195dp"
        android:minHeight="90dp"
        android:elevation="28dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/company_image_field"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="fitXY"
                android:layout_marginStart="3dp"
                android:src="@drawable/city"
                >

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/designation_work_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="9dp"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text="Graphic Designer"
                    android:textSize="17sp"
                    android:textColor="#30475E">

                </TextView>

                <TextView
                    android:id="@+id/company_name_work_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:paddingTop="1dp"
                    android:text="XYZ technologies"
                    android:textColor="@color/black"
                    android:textSize="12sp">
                </TextView>
            </LinearLayout>
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="6dp"
                app:srcCompat="@android:drawable/ic_menu_edit" />
            <ImageView
                android:id="@+id/delete"
                android:layout_width="24dp"
                android:layout_height="23dp"
                android:layout_marginEnd="6dp"
                app:srcCompat="@drawable/del" />
        </LinearLayout>


