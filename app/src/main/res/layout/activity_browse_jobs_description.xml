<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/ns"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Categories.Job_description">
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_btn_desc"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:src="@drawable/ic_baseline_keyboard_backspace_24"
                    android:layout_gravity="center_vertical">
                </ImageView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:id="@+id/paper_plane"
                    android:layout_width="40dp"
                    android:layout_height="37dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/whatsapp"
                    android:foregroundGravity="right"
                    android:layout_gravity="center_vertical">
                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/build"
                    android:layout_width="68dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:foregroundGravity="right"
                    android:src="@drawable/city"></ImageView>

                <TextView
                    android:id="@+id/txtNoData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:fontFamily="@font/seogee_ui"
                    android:text="No data found"
                    android:textColor="@color/app_grey"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView36" />
                <TextView
                    android:id="@+id/job_name_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/seoge_bold_two">
                </TextView>
                <TextView
                    android:id="@+id/company_name_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text=""
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/seoge_bold_two">
                </TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="center_horizontal"
                    android:weightSum="3"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:minWidth="116dp"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/ronded"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/location_ico"
                            android:layout_marginStart="2dp"
                            android:layout_gravity="center_vertical">
                        </ImageView>
                        <TextView
                            android:id="@+id/location_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Delhi"
                            android:textSize="9sp"
                            android:minLines="2"
                            android:maxLength="46"
                            android:gravity="center_vertical"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_marginStart="5dp"
                            android:fontFamily="@font/seogee_ui">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="18dp"
                        android:minWidth="116dp"
                        android:layout_weight="1"
                        android:background="@drawable/ronded"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="2dp"
                            android:src="@drawable/suitcase"
                            android:layout_gravity="center_vertical">
                        </ImageView>
                        <TextView
                            android:id="@+id/experience_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="9sp"
                            android:minLines="2"
                            android:maxLength="26"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:fontFamily="@font/seogee_ui">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="18dp"
                        android:minWidth="116dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/ronded"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginStart="2dp"
                            android:src="@drawable/level"
                            android:layout_gravity="center_vertical">
                        </ImageView>
                        <TextView
                            android:id="@+id/level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="9sp"
                            android:minLines="2"
                            android:maxLength="26"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="@color/black"
                            android:fontFamily="@font/seogee_ui">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:weightSum="2"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/applicants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="42 applicants"
                    android:layout_weight="1"
                    android:layout_marginTop="18dp"
                    android:visibility="gone"
                    android:layout_marginStart="26dp"
                    android:textColor="@color/app_grey"
                    android:fontFamily="@font/seogee_ui">
                </TextView>

                <TextView
                    android:id="@+id/time_ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 days ago"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:visibility="gone"
                    android:layout_marginEnd="27dp"
                    android:layout_marginTop="18dp"
                    android:textColor="@color/app_grey"
                    android:fontFamily="@font/seogee_ui">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/job_description_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="Job Description"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/job_desc_border"
                    android:layout_marginStart="18dp"
                    >
                </TextView>
                <TextView
                    android:id="@+id/about_company_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="About Company"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="@drawable/job_desc_border"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1">
                </TextView>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/job_desc_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/field_job_shadow">
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/seoge_bold_two"
                android:textSize="12dp"
                android:text="Position Overview">
            </TextView>
            <TextView
                android:id="@+id/position_overview_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:fontFamily="@font/seogee_ui"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:text=" ">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/seoge_bold_two"
                android:textSize="12dp"
                android:text="KRA">
            </TextView>
            <TextView
                android:id="@+id/ti_kra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                android:fontFamily="@font/seogee_ui"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:text="" >
            </TextView>




        </LinearLayout>



        <LinearLayout
            android:id="@+id/about_company_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/field_job_shadow">

            <TextView
                android:id="@+id/about_comp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:fontFamily="@font/seogee_ui"
                android:singleLine="false"
                android:inputType="textMultiLine"
                android:text=" ">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="49dp"
            android:layout_marginTop="25dp"
            android:background="@color/choclate"
            android:minHeight="48dp"
            android:layout_gravity="left"
            android:weightSum="2"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/save_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/save_cancel_border"
                android:fontFamily="@font/seoge_bold_two"
                android:gravity="center"
                android:minWidth="80dp"
                android:minHeight="33dp"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="19dp"
                android:layout_gravity="center_vertical"
                android:text="Save"
                android:textColor="@color/choclate">
            </TextView>
            <!--        <View-->
            <!--            android:layout_width="0dp"-->
            <!--            android:layout_height="0dp"-->
            <!--            android:layout_weight="1" />-->

            <TextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/save_cancel_border"
                android:fontFamily="@font/seoge_bold_two"
                android:gravity="center"
                android:minWidth="80dp"
                android:minHeight="33dp"
                android:layout_weight="1"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_vertical"
                android:text=""
                android:layout_marginStart="3dp"
                android:textColor="@color/choclate">
            </TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>