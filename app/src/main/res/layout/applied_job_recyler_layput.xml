<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/field_job_shadow"
        android:minWidth="195dp"
        android:minHeight="90dp"
        android:elevation="28dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/company_image_field_applied"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="fitXY"
                android:layout_marginTop="4dp"
                android:layout_marginStart="3dp"
                android:background="@drawable/border"
                android:src="@drawable/magnifing_glass">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/job_name_field_applied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text="Graphic Designer"
                    android:textSize="16sp"
                    android:textColor="#30475E">

                </TextView>

                <TextView
                    android:id="@+id/company_name_field_applied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="1dp"
                    android:paddingTop="2dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12sp">
                </TextView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="7dp"
                android:src="@drawable/creative_bulb"></ImageView>

            <TextView
                android:id="@+id/skill_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text="6-8 Lpa"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="9sp">

            </TextView>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop=".5dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/location_ico"></ImageView>

            <TextView
                android:id="@+id/location_field_applied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:textColor="@color/black"
                android:textSize="9sp">

            </TextView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/choclate"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:text="Applied Date : ">
        </TextView>
        <TextView
            android:id="@+id/tv_applied_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/choclate"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="6dp"
            android:text="">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/choclate"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="6dp"
            android:text="Status: ">
        </TextView>
        <TextView
            android:id="@+id/tv_applied_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/choclate"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:text="">
        </TextView>
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>