<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/field_job_shadow"
        android:minWidth="195dp"
        android:minHeight="90dp"
        android:elevation="28dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/company_image_field"
                android:layout_width="58dp"
                android:layout_height="52dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@drawable/border"
                android:layout_marginStart="3dp"
                >

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/job_name_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="9dp"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text=""
                    android:textSize="17sp"
                    android:textColor="#30475E">

                </TextView>

                <TextView
                    android:id="@+id/company_name_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:paddingTop="1dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12sp">
                </TextView>
            </LinearLayout>
            <ImageView
                android:id="@+id/save_job_button"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginEnd="5dp"></ImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginStart="9dp"
                android:layout_marginTop="1dp"></ImageView>

            <TextView
                android:id="@+id/exp_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="4dp"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

            <ImageView
                android:id="@+id/rupee"
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginHorizontal="4dp"
                ></ImageView>

            <TextView
                android:id="@+id/salary_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="4dp"></ImageView>

            <TextView
                android:id="@+id/location_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="9dp"></ImageView>

            <TextView
                android:id="@+id/description_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/seogee_ui"
                android:layout_marginStart="3dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:layout_marginTop="9dp"
                android:textSize="13sp"
                android:textColor="@color/app_grey">

            </TextView>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />-->
            <TextView
                android:id="@+id/apply_positions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/save_cancel_border"
                android:fontFamily="@font/seoge_bold_two"
                android:gravity="center"
                android:minWidth="77dp"
                android:minHeight="30dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="6dp"
                android:layout_gravity="end"
                android:layout_marginStart="3dp"
                android:textColor="@color/choclate">
            </TextView>
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>