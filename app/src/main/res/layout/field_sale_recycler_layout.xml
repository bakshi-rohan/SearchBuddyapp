<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/field_job_shadow"
        android:minWidth="195dp"
        android:minHeight="90dp"
        android:elevation="28dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/company_image_field"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="fitXY"
                android:layout_marginStart="3dp"
                android:background="@drawable/border"
                >

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/job_name_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="9dp"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text="Graphic Designer"
                    android:textSize="17sp"
                    android:textColor="#30475E">

                </TextView>

                <TextView
                    android:id="@+id/company_name_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:paddingTop="1dp"
                    android:text="XYZ technologies"
                    android:textColor="@color/black"
                    android:textSize="12sp">
                </TextView>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

<!--            <ImageView-->
<!--                android:layout_width="16dp"-->
<!--                android:layout_height="22dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginStart="9dp"-->
<!--                android:layout_marginTop="1dp"-->
<!--                android:src="@drawable/office_building"></ImageView>-->

<!--            <TextView-->
<!--                android:id="@+id/experience_field"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:fontFamily="@font/seogee_ui"-->
<!--                android:text="2-4 years"-->
<!--                android:layout_marginTop="1dp"-->
<!--                android:layout_marginHorizontal="4dp"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="12sp">-->

<!--            </TextView>-->

            <ImageView
                android:id="@+id/rupee"
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:src="@drawable/rupee"></ImageView>

            <TextView
                android:id="@+id/salary_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text="6-8 Lpa"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/location_ico"></ImageView>

            <TextView
                android:id="@+id/location_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text="Delhi"
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="9dp"
                android:src="@drawable/creative_bulb"></ImageView>

            <TextView
                android:id="@+id/description_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/seogee_ui"
                android:layout_marginStart="3dp"
                android:text="Business Development,lead generation,Excel,cold callings and Email"
                android:textColor="@color/black"
                android:textSize="12sp">
            </TextView>
        </LinearLayout>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0.4dp"-->
<!--            android:background="@color/black"-->
<!--            android:layout_marginTop="11dp" />-->
        <TextView
            android:id="@+id/apply_positions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/save_cancel_border"
            android:fontFamily="@font/seoge_bold_two"
            android:gravity="center"
            android:minWidth="77dp"
            android:minHeight="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="6dp"
            android:layout_gravity="end"
            android:text="Apply"
            android:layout_marginStart="3dp"
            android:textColor="@color/choclate">
        </TextView>

    </LinearLayout>
</RelativeLayout>