<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@drawable/field_job_shadow"
        android:minWidth="195dp"
        android:minHeight="90dp"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/company_image_field"
                android:layout_width="58dp"
                android:layout_height="52dp"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@drawable/border"
                android:layout_marginStart="3dp"
                android:src="@drawable/city"
                >

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/job_name_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="9dp"
                    android:fontFamily="@font/seoge_bold_two"
                    android:text=""
                    android:textSize="17sp"
                    android:textColor="#30475E">

                </TextView>

                <TextView
                    android:id="@+id/company_name_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="9dp"
                    android:paddingTop="1dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="12sp">
                </TextView>
            </LinearLayout>
            <ImageView
                android:id="@+id/save_job_button"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/bookmark"></ImageView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginStart="9dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/suitcase"></ImageView>

            <TextView
                android:id="@+id/exp_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="4dp"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

            <ImageView
                android:id="@+id/rupee"
                android:layout_width="16dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/rupee"></ImageView>

            <TextView
                android:id="@+id/salary_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

            <ImageView
                android:layout_width="14dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="1dp"
                android:layout_marginHorizontal="4dp"
                android:src="@drawable/location_ico"></ImageView>

            <TextView
                android:id="@+id/location_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/seogee_ui"
                android:text=""
                android:layout_marginStart="3dp"
                android:textColor="@color/black"
                android:textSize="12sp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginStart="9dp"
                android:src="@drawable/creative_bulb"></ImageView>

            <TextView
                android:id="@+id/description_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/seogee_ui"
                android:layout_marginStart="3dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="12sp">
            </TextView>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/seogee_ui"
        android:text=""
        android:layout_marginTop="9dp"
        android:textSize="13sp"
        android:textColor="@color/app_grey">

    </TextView>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />-->

    <TextView
        android:id="@+id/apply_positions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/save_cancel_border"
        android:fontFamily="@font/seoge_bold_two"
        android:gravity="center"
        android:minWidth="77dp"
        android:minHeight="35dp"
        android:text="Apply"
        android:textColor="@color/choclate"></TextView>
</LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="195dp"
        android:visibility="visible"
        android:background="@drawable/card_border"
        android:elevation="8dp"
        android:id="@+id/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:minWidth="195dp"
            android:minHeight="90dp"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Login/Register to"
                android:fontFamily="@font/seoge_bold_two"
                android:layout_marginHorizontal="5dp"
                android:textColor="@color/black"
                android:layout_marginBottom="3dp"
                android:textSize="17sp"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/paper_plane"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply for sales Job"
                    android:textSize="15sp"
                    android:textColor="@color/app_grey"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/card_profile"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Personalised job recommendations"
                    android:textSize="15sp"
                    android:textColor="@color/app_grey"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginHorizontal="5dp"
                    android:src="@drawable/card_bell"></ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay Updated with new sales job notification"
                    android:textSize="15sp"
                    android:textColor="@color/app_grey"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/login_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_button"
                    android:fontFamily="@font/seoge_bold_two"
                    android:gravity="center"
                    android:minWidth="77dp"
                    android:minHeight="30dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="end"
                    android:text="Login"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/app_blue">
                </TextView>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />-->
                <TextView
                    android:id="@+id/signup_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_register"
                    android:fontFamily="@font/seoge_bold_two"
                    android:gravity="center"
                    android:minWidth="77dp"
                    android:minHeight="30dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="end"
                    android:text="Register"
                    android:layout_marginStart="3dp"
                    android:textColor="@color/white">
                </TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

