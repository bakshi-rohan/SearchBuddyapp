<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/app_grey"/>
            <corners android:radius="5dp" />
        </shape>
    </item>

    <item
        android:left="0.8dp"
        android:right="0.8dp"
        android:top="0.8dp"
        android:bottom="1dp">

        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
</layer-list>